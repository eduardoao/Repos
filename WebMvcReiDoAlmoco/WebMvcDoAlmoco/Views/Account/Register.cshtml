@model WebMvcDoAlmoco.Models.AccountViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<h2>@ViewData["Title"]</h2>


<div class="row">
    <div class="signup-form">
        <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
            <h2>Register</h2>
            <p class="hint-text">Novo usuário.</p>
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-success btn-lg btn-block">Salvar</button>
            </div>
        </form>
        <div class="text-center">Já possui uma conta? <a asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]">Logar?</a></div>
       
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
